<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="16dp"
    android:minHeight="120dp">


    <!-- SECCIÓN IZQUIERDA: Logo + Texto "Inventory" -->

    <!-- Logo en la parte superior izquierda -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/inventory_logo"
        android:contentDescription="Logo Inventory"
        android:scaleType="fitCenter" />

    <!-- Texto "Inventory" debajo del logo -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="#e7522e"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/logo"
        android:layout_alignStart="@id/logo"
        android:layout_marginTop="4dp" />

    <!-- SECCIÓN DERECHA: Pregunta + Saldo + Ojo -->

    <!-- Ícono de ojo abierto (Criterio 6) -->
    <ImageView
        android:id="@+id/iconEye"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:contentDescription="Mostrar/Ocultar saldo"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#FFFFFF" />

    <!-- Pregunta "¿Cuánto tengo de inventario?" -->

    <!-- Saldo ($ **** o el valor real) -->

    <!-- SECCIÓN INFERIOR: Gestionar Inventario + Ícono -->

    <!-- Ícono de configuración naranja (abajo a la derecha) -->

    <!-- Pregunta "¿Cuánto tengo de inventario?" (Criterio 4) -->
    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="22dp"
        android:layout_toStartOf="@id/iconEye"
        android:layout_toEndOf="@id/logo"
        android:gravity="right"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <!-- Saldo del inventario (Criterio 5) -->
    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtQuestion"
        android:layout_alignStart="@id/txtQuestion"
        android:layout_alignEnd="@id/iconEye"
        android:layout_marginStart="-44dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="44dp"
        android:gravity="right"
        android:text="$ ****"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Ícono de gestión naranja (Criterio 12) -->
    <ImageView
        android:id="@+id/iconManage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/txtTitle"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-18dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:contentDescription="Gestionar inventario"
        android:focusable="true"
        android:src="@drawable/ic_manage_inventory" />

    <!-- Texto "Gestionar inventario" (Criterio 11) -->
    <TextView
        android:id="@+id/txtManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iconManage"
        android:layout_alignBottom="@id/iconManage"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="2dp"
        android:layout_toStartOf="@id/iconManage"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="Gestionar inventario"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

</RelativeLayout>