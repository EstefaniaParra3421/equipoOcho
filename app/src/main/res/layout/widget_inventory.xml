<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="16dp">

    <!-- SECCIÓN IZQUIERDA: Logo + Texto "Inventory" -->

    <!-- Logo en la parte superior izquierda -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/inventory_logo"
        android:contentDescription="Logo Inventory"
        android:scaleType="fitCenter" />

    <!-- Texto "Inventory" debajo del logo -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventory"
        android:textColor="#e7522e"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/logo"
        android:layout_alignStart="@id/logo"
        android:layout_marginTop="4dp" />

    <!-- SECCIÓN DERECHA: Pregunta + Saldo + Ojo -->

    <!-- Pregunta "¿Cuánto tengo de inventario?" -->

    <!-- Saldo ($ **** o el valor real) -->

    <!-- Ícono de ojo -->

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="58dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@id/logo"
        android:gravity="end"
        android:text="¿Cuánto tengo de inventario?"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <!-- SECCIÓN INFERIOR: Gestionar Inventario + Ícono -->

    <!-- Texto "Gestionar Inventario" -->

    <TextView
        android:id="@+id/txtBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtQuestion"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="20dp"
        android:text="$ * * * *"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iconEye"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_below="@id/txtBalance"
        android:layout_alignEnd="@id/txtBalance"
        android:layout_marginTop="-68dp"
        android:layout_marginEnd="1dp"
        android:clickable="true"
        android:contentDescription="Mostrar/Ocultar saldo"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_view"
        android:tint="#FFFFFF" />

    <TextView
        android:id="@+id/txtManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gestionar Inventario"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:gravity="end"
        android:clickable="true"
        android:focusable="true" />

    <!-- Ícono de configuración naranja -->
    <ImageView
        android:id="@+id/iconManage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_manage_inventory"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:contentDescription="Gestionar inventario"
        android:clickable="true"
        android:focusable="true" />

</RelativeLayout>