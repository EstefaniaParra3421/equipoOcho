<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".InventoryApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/inventory_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/inventory_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.InventoryWidget">


        <!-- ✅ Home Activity (Fragments + Navigation Component) -->
        <activity 
            android:name=".HomeActivity"
            android:theme="@style/Theme.InventoryWidget.AppCompat" />

        <activity android:name=".ProductDetailActivity" />
        
        <!-- ✅ Pantalla de login con Firebase (LAUNCHER) -->
        <activity
            android:name=".LoginActivityWithFirebase"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.InventoryWidget">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- ✅ Pantalla de login alternativa -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.InventoryWidget" />

        <!-- ✅ Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.InventoryWidget" />

        <!-- ✅ Activity con Fragments y Navigation Component -->
        <activity
            android:name=".FragmentDemoActivity"
            android:exported="true"
            android:label="Fragments Demo"
            android:theme="@style/Theme.InventoryWidget" />

        <!-- ✅ Widget -->
        <receiver
            android:name=".InventoryWidgetProvider"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/inventory_widget_info" />
        </receiver>

    </application>

</manifest>
